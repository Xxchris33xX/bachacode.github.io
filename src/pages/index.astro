---
// Section Imports
import Navigation from '../components/Navigation/Navigation.astro';
import HeroSection from '../components/HeroSection/HeroSection.astro';
import AboutMeSection from '../components/AboutMeSection/AboutMeSection.astro';
import SkillsSection from '../components/SkillsSection/SkillsSection.astro';
import ContactsSection from '../components/ContactsSection/index.astro';
import ProjectsSection from '../components/ProjectsSection/index.astro';
// Font Imports
import "@fontsource/dotgothic16";
import "@fontsource/jetbrains-mono";
---

<!DOCTYPE html>
<html lang="es">

<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/svg+xml" href="/ant.png" />
	<meta name="viewport" content="width=device-width" />
	<meta name="generator" content={Astro.generator} />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.6.6/css/flag-icons.min.css" />
	<meta name="description"
		content="Mi nombre es Cristhian Flores, soy un desarrollador web que utiliza Laravel y JavaScript para crear sitios web fantasticos">
	<title>BachaCode - Desarrollador Web</title>
</head>

<body>

	<header>
		<Navigation />
	</header>

	<main>
		<!-- Sección principal -->
		<HeroSection />

		<!-- Sección sobre mi -->
		<h2 id="about-me" class="titles">01 - Sobre Mi</h2>
		<AboutMeSection />

		<!-- Sección de habilidades -->
		<h2 id="skills" class="titles">02 - Habilidades</h2>
		<SkillsSection />

		<!-- Sección de proyectos -->
		<h2 id="projects" class="titles">03 - Proyectos</h2>
		<ProjectsSection/>

		<!-- Sección de contactos -->
		<h2 id="contacts" class="titles">04 - Contactos</h2>
		<ContactsSection />
	</main>

	<footer>
		<section class="flex flex-col text-center bg-item p-6">
			<div class="font-bold">
				<p>&copy; 2022 BachaCode</p>
				<p>Website powered by 🐜</p>
			</div>
			<p class="italic text-xs">Diseñado y desarrollado por Cristhian Flores</p>
		</section>
	</footer>
</body>

<style is:global>
	* {
		scroll-behavior: smooth;
	}

	.titles {
		@apply mt-8 p-6 text-4xl md:text-6xl font-title text-primary
	}

	body {
		@apply text-secondary bg-body font-text
	}

	@font-face {
  font-family: 'icomoon';
  src:  url('/fonts/icomoon.eot?47t0jb');
  src:  url('/fonts/icomoon.eot?47t0jb#iefix') format('embedded-opentype'),
    url('/fonts/icomoon.ttf?47t0jb') format('truetype'),
    url('/fonts/icomoon.woff?47t0jb') format('woff'),
    url('/fonts/icomoon.svg?47t0jb#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: block;
}

[class^="icon-"], [class*=" icon-"] {
  /* use !important to prevent issues with browser extensions that change fonts */

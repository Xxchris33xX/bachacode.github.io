---
// Section Imports
import Navigation from '@es/Navigation/index.astro';
import HeroSection from '@es/HeroSection/index.astro';
import AboutMeSection from '@es/AboutMeSection/index.astro';
import SkillsSection from '@es/SkillsSection/index.astro';
import ContactsSection from '@es/ContactsSection/index.astro';
import ProjectsSection from '@es/ProjectsSection/index.astro';
// Font Imports
import "@fontsource/dotgothic16";
import "@fontsource/jetbrains-mono";
---

<script>
	 document.addEventListener('alpine:init', () => {
		const observer = new IntersectionObserver((e) =>{
			e.forEach((entry) => {
				if(entry.isIntersecting){
					entry.target.classList.add('show');
				} else {
					entry.target.classList.remove('show');
				}
			});
		});
		const sectionElements = document.querySelectorAll('.section');
		sectionElements.forEach((el) => observer.observe(el));
    })
</script>

<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="utf-8"/>
	<link rel="icon" type="image/svg+xml" href="/ant.png" />
	<meta name="viewport" content="width=device-width" />
	<meta name="generator" content={Astro.generator} />
  <link rel="preload" as="style" onload="this.onload=null;this.rel='stylesheet'" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.6.6/css/flag-icons.min.css" />
  <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.6.6/css/flag-icons.min.css"></noscript>
	<meta name="description" content="Mi nombre es Cristhian Flores, soy un desarrollador web que utiliza Laravel y JavaScript para crear sitios web fantasticos">
	<title>BachaCode - Desarrollador Web</title>
</head>

<body>

	<header>
		<Navigation />
	</header>

	<main>
		<!-- Sección principal -->
      <HeroSection />

		<!-- Sección sobre mi -->
		<h2 id="about-me" class="titles">01 - Sobre Mi</h2>
		<AboutMeSection client:visible />

		<!-- Sección de habilidades -->
		<h2 id="skills" class="titles">02 - Habilidades</h2>
		<SkillsSection client:visible />

		<!-- Sección de proyectos -->
		<h2 id="projects" class="titles">03 - Proyectos</h2>
		<ProjectsSection client:visible/>

		<!-- Sección de contactos -->
		<h2 id="contacts" class="titles">04 - Contactos</h2>
		<ContactsSection client:visible/>
	</main>

	<footer class="flex flex-col text-center bg-item p-6">
			<div class="font-bold">
				<p>&copy; 2022 BachaCode</p>
				<p>Website powered by 🐜</p>
			</div>
			<p class="italic text-xs">Diseñado y desarrollado por Cristhian Flores</p>
	</footer>
</body>

<style is:global>
    * {
        scroll-behavior: smooth;
    }
    body {
        @apply text-secondary bg-body font-text overflow-x-hidden
    }
    h1{
        @apply mt-8 p-6 text-2xl md:text-6xl font-title text-primary
    } 
    h2 {
        @apply mt-8 p-6 text-2xl md:text-6xl font-title text-primary
    }
    p{
      @apply text-sm md:text-base
    }
    ::-webkit-scrollbar{
    @apply w-4 h-2 bg-item
    }
    
    ::-webkit-scrollbar-thumb {
    @apply rounded-lg bg-primary
    }

	.section{
		@apply opacity-0 transition-all motion-reduce:transition-none blur-sm duration-1000
	}

	.section-about{
		@apply -translate-x-full
	}

	.show{
		@apply opacity-100 blur-0 translate-x-0
	}


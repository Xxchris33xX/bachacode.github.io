---
import { t } from "i18next";
const { name, title } = Astro.props;
---
<div
    class="flex flex-col justify-center mt-20 w-min lg:mt-16 xl:mt-20 items-center text-center p-3 md:p-6 lg:p-10 space-y-1 md:mx-8 lg:mx-20  bg-item border-2 rounded-3xl border-secondary shadow-2xl shadow-item">
    <img class="flex-shrink lg:w-full h-auto" width="1080" height="607" src="/imgs/bachacode-logo-2.webp"
        alt="bachacode logo">
    <h1 class="pb-1 md:pb-3 md:p-1 md:text-4xl lg:text-4xl xl:text-6xl">{name}</h1>
    <h2 class="pb-0 md:pb-3 text-xs font-text text-white md:text-lg md:p-0 lg:text-xl xl:text-2xl lg:p-3">{title}
    </h2>
</div>
<picture>
    <source srcset="/imgs/herosec-desktop.webp" media="(min-width: 768px)" width="1266" height="964" class="w-full h-auto">
    <img src="/imgs/herosec-desktop-mobile.webp" width="1440" height="1080" class="w-full h-auto"
        alt="hombre programando">
</picture>
---
const { selected, selectedFlag } = Astro.props
---

<div class="flex space-x-3">
  <div class="md:flex flex-col space-x-3 items-center" x-data="modal">
    <div class="pl-4 md:hidden">
      <button aria-label="lenguaje" x-on:click="toggle()"><i class="icon-language"></i></button>
    </div>
    <div class="hidden md:inline">
      <button x-on:click="toggle()"
        ><span class={`fi ${selectedFlag} mx-1`}></span>{selected}<i
          class="mx-0.5"
          x-bind:class="open ? 'icon-close' : 'icon-chevdown'"></i></button
      >
    </div>
    <template x-teleport="header">
      <ul
        x-show="open"
        class="fixed z-40 right-3 top-16 md:right-28 md:top-20 bg-item py-6 px-14 border rounded-lg border-primary"
        x-on:click.outside="close"
        x-cloak
        x-transition:enter.duration.300ms
        x-transition:leave.duration.200ms
      >
        <li>
          <a href="/" class="cursor-pointer"
            ><span class={`fi fi-es cursor-pointer mx-1`}></span>Espa√±ol</a
          >
        </li>
        <li>
          <a href="/en" class="cursor-pointer"
            ><span class={`fi fi-us cursor-pointer mx-1`}></span>English</a
          >
        </li>
      </ul>
    </template>
  </div>
</div>

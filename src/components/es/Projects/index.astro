---
import StarredProject from "./starredProject.astro";
import BasicProject from "./basicProject.astro";
import { starredProjectsES } from "@content/projects";
import { basicProjectsES } from "@content/projects";
---

<div>
    <!-- Content -->
    <div class="flex flex-col items-center mx-auto px-6 pt-16 space-y-4">
        <div class="bg-item p-6 rounded-lg border-2 border-secondary">
            <h3>Proyectos destacados</h3>
        </div>
    <div class="flex flex-col w-11/12 space-y-3">
        <!-- Starred Project -->
        {starredProjectsES.map((starredProject) => (
            <StarredProject 
            title={starredProject.title}
            hasLink={starredProject.hasLink} 
            link={starredProject.link} 
            github={starredProject.github}
            tags={starredProject.tags}
            img={starredProject.img}
            description={starredProject.description}
            >
            </StarredProject>
         ))}
    </div>
    <div class="bg-item p-6 rounded-lg border-2 border-secondary mb-10">
        <h3>Otros proyectos</h3>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4 items-start">
        {basicProjectsES.map((starredProject) => (
            <BasicProject 
            title={starredProject.title}
            hasLink={starredProject.hasLink} 
            link={starredProject.link} 
            github={starredProject.github}
            tags={starredProject.tags}
            description={starredProject.description}
            >
            </BasicProject>
        ))}
        </div>
    </div>
</div>
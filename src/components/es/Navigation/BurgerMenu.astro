---
import { navigateES as navigation } from "@content/navigation";
import NavLink from "./NavLink.astro";
---
<div x-data="modal" class="md:hidden">
    <button aria-label="Burger Menu" x-on:click="toggle()">
        <svg viewBox="0 0 100 80" width="26" height="18" fill="lightgray">
            <rect width="100" height="20" rx="20" ry="20"></rect>
            <rect y="30" width="100" height="20" rx="20" ry="20"></rect>
            <rect y="60" width="100" height="20" rx="20" ry="20"></rect>
        </svg>
    </button>
    <!-- Menu -->
    <template x-teleport="header">
        <div x-show="open" x-cloak
            class="flex flex-col fixed z-30 top-14 w-full h-full bg-slate-400 bg-opacity-10 backdrop-filter backdrop-blur-lg">
            <div class="flex text-right justify-end p-6 text-6xl text-highlight mb-20">
                <button aria-label="menu" x-on:click="close()">X</button>
            </div>
            <div class="flex flex-col text-3xl text-center justify-center space-y-4">
                {navigation.map((link: any) => (
                <NavLink href={link.href} clickEvent="close()" text={link.text}/>
                ))}
            </div>
        </div>
    </template>
</div>
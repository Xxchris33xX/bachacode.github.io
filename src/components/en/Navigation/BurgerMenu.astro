---
import * as navigation from '@content/en/navigation.md';
---
<div x-data="{ open: false }" class="md:hidden">
    <button x-on:click="open = !open">
        <svg viewBox="0 0 100 80" width="26" height="18" fill="lightgray">
            <rect width="100" height="20" rx="20" ry="20"></rect>
            <rect y="30" width="100" height="20" rx="20" ry="20"></rect>
            <rect y="60" width="100" height="20" rx="20" ry="20"></rect>
        </svg>
    </button>
    <!-- Menu -->
<template x-teleport="header">
    <div x-show="open" x-cloak class="flex flex-col z-30 fixed top-14 w-full h-full bg-slate-400 bg-opacity-10 backdrop-filter backdrop-blur-lg">
        <div class="flex text-right justify-end p-6 text-6xl text-highlight mb-20">
            <button aria-label="menu" x-on:click="open = false">X</button>
        </div>
        <div class="flex flex-col text-3xl text-center justify-center space-y-4">
            <a href="#" x-on:click="open = false" class="hover:transition-all hover:text-highlight hover:border-b-2 hover:border-b-highlight">{navigation.frontmatter.home}</a>
            <a href="#about-me" x-on:click="open = false" class="hover:transition-all hover:text-highlight hover:border-b-2 hover:border-b-highlight">{navigation.frontmatter.aboutMe}</a>
            <a href="#skills" x-on:click="open = false" class="hover:transition-all hover:text-highlight hover:border-b-2 hover:border-b-highlight">{navigation.frontmatter.skills}</a>
            <a href="#projects" x-on:click="open = false" class="hover:transition-all hover:text-highlight hover:border-b-2 hover:border-b-highlight">{navigation.frontmatter.projects}</a>
            <a href="#contacts" x-on:click="open = false" class="hover:transition-all hover:text-highlight hover:border-b-2 hover:border-b-highlight">{navigation.frontmatter.contacts}</a>
        </div>
    </div>
</template>
</div>
 
